<div class="container" id="tourpackages-carousel">
  <% @makes.order('name ASC').each_slice(3).each do |group| %>
      <div class="row">
      <% group.each do |supercar| %>
        <div id ="thumb-grid" class="col-xs-18 col-sm-6 col-m-4 col-lg-4">
          <div class="thumbnail">
           
            <div class="caption">
            <div id="manufacturer-title" >
               
               <h4><%= supercar.name %></h4>
              
            </div>
            <div id="manufacturer-car-models">              
				<% supercar.supercars.select("distinct car_model_id").order('created_at ASC').each do |car_model| %>
					<p><%= car_model.car_model.name %></p>
             	<% end %>
            </div> 
             
                                                           
            </div>
          </div>
        </div>
      <% end %>
    </div><!-- End row -->
  <% end %>
  <div style="text-align: right;"> 
  </div>  
</div><!-- End container -->